{
  "name": "kv-formatter",
  "displayName": "KV Formatter",
  "description": "Professional formatter for Kivy .kv files",
  "version": "0.1.3",
  "author": "Hanspeter Fluetsch <fl-tech-design@gmx.ch>",
  "publisher": "fl-tech-design",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fl-tech-design/kv-formatter"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "kivy",
    "format",
    "formatter",
    "kv"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "KvLang",
        "extensions": [".kv"],
        "aliases": ["KvLang", "kv"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "KvLang",
        "scopeName": "source.kv",
        "path": "./syntaxes/kivy.tmLanguage.json"
      }
    ],
    "formatters": [
      {
        "language": "KvLang",
        "extension": ".kv",
        "displayName": "KV Formatter"
      }
    ],
    "commands": [
      {
        "command": "kvFormatter.manualFormat",
        "title": "KV Formatter: Manuell formatieren"
      }
    ],
    "keybindings": [
      {
        "command": "kvFormatter.manualFormat",
        "key": "ctrl+shift+alt+i",
        "mac": "cmd+shift+alt+i",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext .ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}